{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "windows": {
                "command": "time/T && tsc -p tsconfig.json",
            },
            "linux": {
                "command": "export PATH=\"${PATH}:/home/es/.npm-global/bin\" &&date && tsc -p tsconfig.json",
            },
            "problemMatcher": [
                "$tsc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
        {
            "label": "test task",
            "type": "shell",
            "command": "echo $PATH; echo $VISUAL"
        }
    ]
}